

<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body class="d-flex flex-column min-vh-100">
    <%- include("./partials/nav.ejs") %>
    <div class="row">
    <div class="col-md-4">.</div>
    <div class="create-book content col-md-4 col-md-offset-4">
      <div id="h2-about"><h2>Add Book</h2></div>
      <form action="/books" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label ">Title</label>
          <input type="text" class="form-control" id="title" aria-describedby="title" name="title" placeholder="insert the title of your Book">
        </div>
        <div class="mb-3">
          <label for="snippet" class="form-label">Description</label>
          <input type="text" class="form-control" id="snippet" name="snippet" placeholder="insert the Description of your Book">
        </div>
        <div class="mb-3">
          <label for="file" class="form-label">File</label>
          <input type="file" class="form-control" id="file" name="file" accept="application/pdf">
        </div>
        <button type="submit" class="btn btn-primary" id="saveBtn" value="save">Save</button>
      </form>
    </div>
  </div>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>

